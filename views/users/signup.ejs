<% layout ("/layouts/boilerPlate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3"> Signin</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3"><label for="username" class="form-label">username</label>
                <input name="username"  type="text" id="username" class="form-control" required/>
                <div class="valid-feedback">everything is right</div>
            </div>
            <div class="mb-3"><label for="email" class="form-label">email</label>
                <input name="email"  type="text" id="email" class="form-control" required/>
                <div class="valid-feedback">everything is right</div>
            </div>
            <div class="mb-3"><label for="password" class="form-label">password</label>
                <input name="password"  type="text" id="password" class="form-control" required/>
                <div class="valid-feedback">everything is right</div>
            </div>
            <button>signup</button>
        </form>

    </div>
</div>