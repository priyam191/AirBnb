<% layout("/layouts/boilerplate") %>
<body>
    <h3>All listings</h3>
    <!-- <form method="GET" action="/listings/new"><button>create new listing</button>
    </form> -->
    <div class="row  row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <%for(let listing of allListings){%>
            <a href="/listings/<%= listing._id%>" style="text-decoration: none;" >
            <div class="card listing-card" style="width: 18rem;">
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b><br>
                    <%= listing.price %> /per night
                  </p>
                </div>
              </div>
            </a>
              <% } %>
    </div>
   
   
    
</body>
